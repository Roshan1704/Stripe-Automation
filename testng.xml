<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="StripeAutomationSuite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="com.stripe.automation.listeners.TestListener"/>
    </listeners>

    <test name="API-Tests">
        <classes>
            <class name="com.stripe.automation.api.tests.StripeApiTests"/>
        </classes>
    </test>

    <test name="Webhook-Tests">
        <classes>
            <class name="com.stripe.automation.api.tests.WebhookValidationTests"/>
        </classes>
    </test>

    <test name="UI-BDD-Tests">
        <classes>
            <class name="com.stripe.automation.runners.CucumberUiTestRunner"/>
        </classes>
    </test>
</suite>
