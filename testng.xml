<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="StripeAutomationSuite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="com.stripe.automation.listeners.TestListener"/>
    </listeners>

    <test name="API-Tests">
        <classes>
            <class name="com.stripe.automation.api.tests.StripeApiTests"/>
        </classes>
    </test>

    <test name="Webhook-Tests">
        <classes>
            <class name="com.stripe.automation.api.tests.WebhookValidationTests"/>
        </classes>
    </test>


    <test name="API-Validation-Matrix-300Plus">
        <classes>
            <class name="com.stripe.automation.api.tests.StripeRequestValidationMatrixTests"/>
        </classes>
    </test>


    <test name="UI-Page-TestCases">
        <classes>
            <class name="com.stripe.automation.ui.tests.pages.LoginPageTestCases"/>
            <class name="com.stripe.automation.ui.tests.pages.PaymentsPageTestCases"/>
            <class name="com.stripe.automation.ui.tests.pages.CustomersPageTestCases"/>
            <class name="com.stripe.automation.ui.tests.pages.RefundsPageTestCases"/>
            <class name="com.stripe.automation.ui.tests.pages.DisputesPageTestCases"/>
        </classes>
    </test>

    <test name="UI-POM-TestCases">
        <classes>
            <class name="com.stripe.automation.ui.tests.StripeDashboardUiTestCases"/>
        </classes>
    </test>
    <test name="UI-BDD-Tests">
        <classes>
            <class name="com.stripe.automation.runners.CucumberUiTestRunner"/>
        </classes>
    </test>
</suite>
